pipeline {
  
    agent any
    tools
    stages {
    
        stage("build jar") {
       
            steps {
                echo 'building the application ...'
                sh 'mvn package'
            }  
        }
        stage("test") {
       
            steps {
                echo 'test the application ...'
            }  
        }
        stage("deploy") {
       
            steps {
                echo 'deploy the application ...'
            }  
        } 
    }
      
}  
  
